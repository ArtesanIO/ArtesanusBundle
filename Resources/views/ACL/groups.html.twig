{% extends 'ArtesanusBundle::acl.html.twig' %}

{% block artesanus_section_subtitle %}
    {{ 'artesanus.subtitles.acl.groups'|trans({}, 'ArtesanusBundle') }}
{% endblock %}

{% block artesanus_section_body %}
    {% embed "ArtesanusBundle::Components/table.html.twig" with { 'rows': ['#','Groups',''] }%}
        {% block tbody %}
            {% for group in groups %}
                <tr>
                    <td>{{ group.id }}</td>
                    <td>{{ group.name }}</td>
                    <td class="text-right">
                        <div class="btn-group">
                            <a href="{{ path('artesanus_console_acl_group', {id: group.id }) }}" class="btn btn-default">
                                <span class="glyphicon glyphicon-edit"></span>
                            </a>
                            <a href="{{ path('artesanus_console_acl_groups_delete', {id: group.id }) }}" type="button" class="btn btn-default btn-delete">
                                <span class="glyphicon glyphicon-trash"></span>
                            </a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        {% endblock %}
    {% endembed %}
{% endblock %}
