{% extends 'ArtesanusBundle::acl.html.twig' %}

{% block artesanus_section_subtitle %}Roles{% endblock %}

{% block artesanus_section_body %}

    {% embed "ArtesanusBundle::Components/table.html.twig" with { 'rows': ['Role','Role Key',''] }%}
        {% block tbody %}
            {% for role in roles %}
            <tr>
                <td>{{ role.role }}</td>
                <td>{{ role.roleKey }}</td>
                <td class="text-right">
                    <div class="btn-group">
                        <a class="btn btn-default" href="{{ path('artesanus_console_acl_role', { id: role.id }) }}">
                            <span class="glyphicon glyphicon-edit"></span>
                        </a>
                        <a href="{{ path('artesanus_console_acl_roles_delete', {id: role.id }) }}" type="button" class="btn btn-default btn-delete">
                            <span class="glyphicon glyphicon-trash"></span>
                        </a>
                    </div>

                </td>
            </tr>
            {% endfor %}
        {% endblock %}
    {% endembed %}

{% endblock %}
