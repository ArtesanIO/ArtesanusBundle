{% extends 'ArtesanusBundle::artesanus.html.twig' %}

{% block artesanus %}

<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand">ArtesanusBundle</a>

        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            {{ knp_menu_render('ArtesanusBundle:ConsoleBuilder:consoleMenu', {'template': 'ArtesanusBundle:Menu:knp_menu.html.twig'}) }}
            {{ knp_menu_render('ArtesanusBundle:ConsoleBuilder:mainMenu', {'template': 'ArtesanusBundle:Menu:knp_menu.html.twig'}) }}

            {{ knp_menu_render('ArtesanusBundle:ConsoleBuilder:userMenu', {'template': 'ArtesanusBundle:Menu:knp_menu.html.twig'}) }}
        </div>
    </div>
</nav>
<div id="section-header">
    <div class="section-header section-header-title">
        <h4>{% block artesanus_section_title %}{% endblock %} <small>{% block artesanus_section_subtitle %}{% endblock %}</small></h4>
    </div>
    <div class="section-header section-header-btn-plus">
        {% import 'ArtesanusBundle::Components/buttons.html.twig' as btn %}

        {{ btn.modal('Nuevo','myModal') }}
    </div>
</div>
{# flashers() #}
    <div id="content-wrap">

        {% block artesanus_section_body %}{% endblock %}
    </div>


{% endblock %}
