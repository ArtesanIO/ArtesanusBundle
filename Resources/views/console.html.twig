{% extends 'ArtesanusBundle::artesanus.html.twig' %}

{% block artesanus %}

<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand">ArtesanusBundle</a>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            {{ knp_menu_render('ArtesanusBundle:Builder:consoleMenu') }}
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{% if app.user.name == "" %} {{ app.user.username }} {% else %} {{ app.user.name }} {% endif %}<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="">Perfil</a></li>
                        <!--<li><a href="#">Another action</a></li>
                        <li><a href="#">Something else here</a></li>-->
                        <li role="separator" class="divider"></li>
                        <li><a href="{{ path('artesanus_security_logout')}}">Logout</a></li>
                  </ul>
                </li>
            </ul>
        </div>
    </div>
</nav>


    <div id="content-wrap">
        {{ flashers() }}
        <div class="page-header">
            <h3>{% block artesanus_section_title %}{% endblock %} <small>{% block artesanus_section_subtitle %}{% endblock %}</small></h3>
        </div>
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="btn-group">
                    {% block artesanus_seccion_navbar %}{% endblock %}
                    {% include 'ArtesanusBundle::includes/acl-navbar.html.twig' %}
                </div>
            </div>
        </div>
        {% block artesanus_section_body %}{% endblock %}
    </div>


{% endblock %}
